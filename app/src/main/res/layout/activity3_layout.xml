<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="40dp"
        android:paddingBottom="20dp"
        tools:context="Activity2"
        android:background="@drawable/background"
        >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/formcorner"

        android:paddingTop="30dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:paddingBottom="30dp"
        >

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back_act2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:backgroundTint="#B5B5B5"
        app:shapeAppearanceOverlay="@style/addButton"
        app:tint="#fff"
        tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name..."
            tools:ignore="TouchTargetSizeCheck"
            android:id="@+id/sortiename"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_gravity="center"
            android:id="@+id/timepick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Friends..."
            android:id="@+id/friends"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/confirmbtnfrag"

            android:drawableRight="@drawable/ic_baseline_arrow_right_alt_24"
            android:textColor="#ffffff"
            android:drawableTint="#ffffff"

            android:text="Confirm"
            android:textAlignment="textStart"
            android:textAllCaps="false"

            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"

            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/btnedit"
            android:foreground="?android:selectableItemBackgroundBorderless"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/deletebtn"

            android:gravity="center"
            android:id="@+id/deletecont"
            >
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"

            android:textColor="#ffffff"
            android:id="@+id/deletebutton"

            android:text="Delete"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20sp"

            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"


            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/btnedit"
            android:backgroundTint="#F75C94"
            android:foreground="?android:selectableItemBackgroundBorderless"
            />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>








    </LinearLayout>
